@if (MVCIDentity.Helper.User.ContextWrapper.IsSignedIn())
{

    var user = MVCIDentity.Helper.User.ContextWrapper.GetCurrentUser();
    if (user is not null)
    {
        <span>
            <span> @user.FirstName</span> -
            <span> @user.LastName</span>
            <span class="mx-2"> @Html.ActionLink(" Edit Users", "EditUsers", "Account")</span>
        </span>
    }

    @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
    {
          <button type="submit" class="btn btn-danger"> Logout</button>
    }

}
else
{
    <ul>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
        </li>

    </ul>

}