@model MVCIDentity.Models.ViewModel.UserLoginViewModel
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="container-fluid ">
        <div class="row">
            <div class="col-md-6 mt-3 form-group">
                @Html.LabelFor(item => item.UserName)
                @Html.TextBoxFor(item => item.UserName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(item => item.UserName)
            </div>

            <div class="col-md-6 mt-3">
                @Html.LabelFor(item => item.Password)
                @Html.PasswordFor(item => item.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(item => item.Password)
            </div>


        </div>
        <button type="submit" class="btn btn-primary mt-3"> submit</button>
    </div>
}